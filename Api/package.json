{
  "name": "warung-ibuk-iyos-backend",
  "version": "1.0.0",
  "description": "Backend API for Warung Ibuk Iyos",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:studio": "npx prisma studio",
    "db:reset": "npx prisma migrate reset --force",
    "init": "npm run db:generate && npm run db:push && curl -X POST http://localhost:5000/api/init"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "pdfkit": "^0.14.0",
    "multer": "^1.4.5"
  },
  "devDependencies": {
    "prisma": "^5.0.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/pdfkit": "^0.12.9",
    "typescript": "^5.3.3",
    "ts-node-dev": "^2.0.0"
  }
}